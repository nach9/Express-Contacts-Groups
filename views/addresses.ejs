<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>List Addresses</title>
</head>

<body>
  <a href="/">Back to main</a><br><br>
  <table style="width:50%" border="1px thin black">
    <tr>
      <th>id</th>
      <th>street</th>
      <th>city</th>
      <th>zipcode</th>
      <th>contactID</th>
      <th>contactName</th>
    </tr>
    <% for (let i=0 ; i < dataRows.length ; i++) {%>
      <tr>
        <td>
          <%=dataRows[i].id%>
        </td>
        <td>
          <%=dataRows[i].street%>
        </td>
        <td>
          <%=dataRows[i].city%>
        </td>
        <td>
          <%=dataRows[i].zipcode%>
        </td>
        <td>
          <%=dataRows[i].contactID%>
        </td>
        <td>
          <%=dataRows[i].contactName%>
        </td>

        <td>
          <a href="/addresses/edit/<%=dataRows[i].id%>">edit</a>
        </td>
        <td>
          <a href="/addresses/delete/<%=dataRows[i].id%>">delete</a>
        </td>
      </tr>
      <%}%>
  </table>


  <form action="/addresses" method="post">
    <input type="text" name="street" placeholder="Street"><br>
    <input type="text" name="city" placeholder="City"><br>
    <input type="text" name="zipcode" placeholder="Zip Code"><br>
    <select name="selectContact" required>
      <option value="">-- Please select contact ---</option>
      <% for (let i=0 ; i < dataContacts.length ; i++) {%>
      <option value="<%=dataContacts[i].id%>"><%=dataContacts[i].name%></option>
      <%}%>
    </select><br>
    <input type="submit" value="Add Addresses">
  </form>



</body>

</html>
